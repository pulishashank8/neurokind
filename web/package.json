{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "dev-clean.bat",
    "build": "next build",
    "start": "next start -p 5000 -H 0.0.0.0",
    "prod": "next dev -p 5000 -H 0.0.0.0",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "api:health": "pwsh -Command \"Invoke-RestMethod 'http://localhost:3000/api/health'\"",
    "api:posts": "pwsh -Command \"Invoke-RestMethod 'http://localhost:3000/api/posts?limit=5&sort=new' | ConvertTo-Json\"",
    "api:post-detail": "pwsh -Command \"Write-Host 'Usage: npm run api:post-detail -- [post-id]' ; Invoke-RestMethod \\\"http://localhost:3000/api/posts/your-post-id\\\"\"",
    "api:comments": "pwsh -Command \"Write-Host 'Usage: npm run api:comments -- [post-id]' ; Invoke-RestMethod \\\"http://localhost:3000/api/posts/your-post-id/comments\\\"\"",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:integration": "dotenv -e .env.test -- vitest run src/__tests__/integration",
    "test:ui": "dotenv -e .env.test -- vitest --ui",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "test:health": "powershell -ExecutionPolicy Bypass -File ./scripts/test-health.ps1",
    "test:health:quick": "powershell -Command \"$response = Invoke-RestMethod 'http://localhost:3000/api/health'; Write-Host ('Status: ' + $response.status) -ForegroundColor Green\"",
    "test:create-post": "node scripts/test-create-post.mjs",
    "test:smoke": "node scripts/test-smoke.mjs",
    "test:windows": "pwsh -Command \"Write-Host 'Testing NeuroKind API on Windows...' ; Write-Host '✓ Health:' ; Invoke-RestMethod 'http://localhost:3000/api/health' | ConvertTo-Json ; Write-Host '✓ Posts:' ; Invoke-RestMethod 'http://localhost:3000/api/posts?limit=1&sort=new' | ConvertTo-Json\"",
    "dev:clear-ratelimit": "node scripts/clear-rate-limit.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.0",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.90.18",
    "@types/ioredis": "^4.28.10",
    "@vercel/analytics": "^1.4.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.2",
    "next-auth": "^4.24.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.22.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "resend": "^6.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@prisma/engines": "^7.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.17",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "md-to-pdf": "^5.2.5",
    "msw": "^2.12.7",
    "node-mocks-http": "^1.17.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
